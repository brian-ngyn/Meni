// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id               String  @id @default(auto()) @map("_id") @db.ObjectId
  email            String  @unique
  firstName        String
  lastName         String
  clerkId          String  @unique
  stripeCustomerId String?
  stripePaymentId  String?
  isPaid           Boolean @default(false)
  isBetaTester     Boolean @default(true)
  currentPlan      String
  lastPaidAt       String? // this will be BigInt in the future
}

model RestaurantInfo {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  ownerId         String      @unique
  name            String
  address         String
  phoneNumber     String
  description     String
  image           String
  activeMenuId    String?
  featuredPayment Boolean?
  paidUntil       String? // this will be BigInt in the future
  geoLocation     GeoLocation
}

model Menus {
  id             String             @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  restaurantId   String
  tags           String[]
  mainCategories MenuMainCategory[]
}

type MenuMainCategory {
  id            String
  name          String
  subCategories MenuSubCategory[]
}

type MenuSubCategory {
  id    String
  name  String
  items MenuItem[]
}

type MenuItem {
  id          String
  name        String
  price       String 
  description String
  image       String
  tags        String[]
}

type GeoLocation {
  latitude  Float
  longitude Float
}
