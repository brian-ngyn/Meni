// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id               String  @id @default(cuid()) @map("_id")
  clerkId          String  @unique
  stripeCustomerId String
  stripePaymentId  String
  isPaid           Boolean @default(false)
  currentPlan      String
  lastPaidAt       String? // this will be BigInt in the future
}

model RestaurantInfo {
  id              String   @id @default(cuid()) @map("_id")
  ownerId         String
  name            String
  address         String
  phoneNumber     String
  description     String
  image           String
  activeMenuId    String?
  featuredPayment Boolean?
  paidUntil       String? // this will be BigInt in the future
  geoLocation     GeoLocation
}

model Menus {
  id             String             @id @default(cuid()) @map("_id")
  name           String?
  mainCategories MenuMainCategory[]
  restaurantId   String?
  tags           String[]
}

type MenuMainCategory {
  id            String
  name          String
  subCategories MenuSubCategory[]
}

type MenuSubCategory {
  id    String
  name  String
  items MenuItem[]
}

type MenuItem {
  id           String
  name         String
  price        Int
  description  String
  image        String
  tags         String[]
}

type GeoLocation {
  latitude  Float
  longitude Float
}