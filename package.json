{
  "scripts": {
    "dev": "concurrently \"yarn --cwd packages/menu-site dev\" \"yarn --cwd packages/admin-site dev\"",
    "dev:explore": "yarn --cwd packages/menu-site dev",
    "dev:admin": "yarn --cwd packages/admin-site dev",
    "install": "yarn --cwd packages/menu-site install && yarn --cwd packages/admin-site install",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "pinst": "^3.0.0"
  }
}
