// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id               String  @id @default(auto()) @map("_id") @db.ObjectId
  email            String  @unique
  firstName        String
  lastName         String
  clerkId          String  @unique
  stripeCustomerId String?
  stripePaymentId  String?
  plan             String  @default("FREE1")
  activePayment    Boolean @default(false)
  isPaid           Boolean @default(false) // will remove this in the future, use entilements instead
  isBetaTester     Boolean @default(true) // will remove this in the future, use entitlements instead
  currentPlan      String // will remove this in the future, use "plan" instead
  lastPaidAt       String? // this will be BigInt in the future, this value will change based on stripe, maybe need to rename this property as well
}

model RestaurantInfo {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  ownerId      String
  name         String
  address      String
  phoneNumber  String
  description  String
  image        String
  activeMenuId String?
  paidUntil    String? // remove this in the future, add this to the Account model, get this value from stripe (lastPaidAt)
  geoLocation  GeoLocation
}

model Menus {
  id             String             @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  restaurantId   String
  tags           String[]
  mainCategories MenuMainCategory[]
}

type MenuMainCategory {
  id            String
  name          String
  subCategories MenuSubCategory[]
}

type MenuSubCategory {
  id    String
  name  String
  items MenuItem[]
}

type MenuItem {
  id          String
  name        String
  price       String
  description String
  image       String
  tags        String[]
}

type GeoLocation {
  latitude  Float
  longitude Float
}
